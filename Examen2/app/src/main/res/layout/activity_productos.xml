<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#000000"
    android:foregroundTint="@color/black"
    android:scrollbarThumbHorizontal="@color/black"
    android:scrollbarThumbVertical="@color/black"
    android:scrollbarTrackHorizontal="@color/black"
    tools:context=".MainActivity">

    <SearchView
        android:id="@+id/busProducto"
        android:layout_width="383dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Buscar Producto..."
        android:inputType="textPersonName"
        android:searchIcon="@android:drawable/ic_menu_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AgregarProducto2"
        android:layout_width="115dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="148dp"
        android:text="Agregar"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/busProducto" />

    <Button
        android:id="@+id/buscarCliente"
        android:layout_width="124dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:text="buscar"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/AgregarProducto2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/busProducto" />

    <Button
        android:id="@+id/actualizarProductos"
        android:layout_width="124dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:text="Act"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AgregarProducto2"
        app:layout_constraintTop_toBottomOf="@+id/busProducto" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="606dp"
        android:layout_marginTop="68dp"
        android:background="#000000"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/busProducto"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp">

        <ListView
            android:id="@+id/listView"
            android:layout_width="397dp"
            android:layout_height="571dp"
            android:background="#000000"
            android:backgroundTint="#000000"
            android:cacheColorHint="@color/black"
            android:divider="@color/black"
            android:listSelector="@color/black"
            android:scrollbars="vertical"
            android:textColor="#000000"
            android:textFilterEnabled="false">

        </ListView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>